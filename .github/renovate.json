{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended"],
	"customManagers": [
		{
			"fileMatch": ["\\.md$"],
			"customType": "regex",
			"matchStrings": [
				"uses: (?<depName>[^@]+)@(?<currentValue>v?\\d+\\.\\d+\\.\\d+|v?\\d+)"
			],
			"datasourceTemplate": "github-tags"
		}
	]
}
